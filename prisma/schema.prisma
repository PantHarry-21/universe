generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Proposal {
  id            String   @id @default(uuid())
  slug          String   @unique
  title         String?
  passcodeHash  String?
  creatorToken  String   @default(uuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  memories Memory[]

  @@map("proposals")
}

model Memory {
  id              String   @id @default(uuid())
  proposalId      String
  constellationId String
  title           String
  caption         String?
  date            DateTime?
  imageUrl        String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  proposal Proposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  @@unique([proposalId, constellationId])
  @@map("memories")
}
